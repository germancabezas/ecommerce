  <div class="row home-products">
    <%@products.each do |product|%>
      <div class="col-md-3 col-sm-4 col-xs-6">
        <div class="block">
          <a href="/products/<%=product.id%>">
          <img class="img-home" src="<%=product.image%>">
          </a>
          <div class="well well-sm product-grid-item">
            <a href="/products/<%=product.id%>"><h5><%=product.title%></h5> </a>
            <h5><%=number_to_currency(product.price)%></h5>
            <% product.categories.each do |category| %>
            <h5><%=category.name%> </h5>
            <% end %>
            <%=product.brand%>
          </div>
        </div>  
      </div>
    <%end%>
